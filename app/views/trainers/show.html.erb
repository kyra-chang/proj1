<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<% if current_trainer.email == @trainer.email %>
	<%= button_to "Create a pokemon!", create_path, :class => "button medium", :method => :get %>
<% end %>

<p>Trainer's Pokemons:</p>
<% @trainer.pokemons.each do |p| %>
    <%= image_tag("pokemon/#{p.ndex}.png", alt: "pokemon") %>
    <p>Name: <%=p.name%></p>
    <p>Level: <%=p.level%></p>
    <p>Health: <%=p.health%></p>
    <%= button_to "Damage!", damage_path(id: @trainer,pokemon: p), :class => "button medium", :method => :patch %>
<% end %>
